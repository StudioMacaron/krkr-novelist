<Window x:Class="KrkrNovelist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KrkrNovelist"
        mc:Ignorable="d"
        Title="KrkrNovelist" Height="576" Width="1024"
        ResizeMode="NoResize">

    <Grid>
        <StackPanel>
            <DockPanel>
                <Menu DockPanel.Dock="Top" BorderBrush="LightGray" BorderThickness="0,0,0,1">
                    <MenuItem Header="ファイル(_F)">
                        <MenuItem Header="プロジェクトを開く" />
                        <MenuItem Header="キャラクターを追加" Command="{Binding AddCharaCmd}" />
                        <MenuItem Header="背景を追加" Command="{Binding AddBackgroundCmd}" />
                        <MenuItem Header="エフェクトを追加" />
                        <MenuItem Header="BGMを追加" Command="{Binding AddBGMCmd}" />
                        <MenuItem Header="SEを追加" Command="{Binding AddSECmd}" />
                    </MenuItem>
                </Menu>
            </DockPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="DarkGray" BorderThickness="0,0,1,0">
                    <Grid Grid.Column="0">
                        <Canvas Width="640" Height="360">
                            <Canvas.Background>
                                <ImageBrush ImageSource="{Binding Background.Value, TargetNullValue={x:Null}}" />
                            </Canvas.Background>
                        </Canvas>
                    </Grid>
                </Border>
                <Grid Grid.Column="1" Background="White" Height="500" Margin="10,10,10,10">
                    <ScrollViewer>
                        <StackPanel>
                            <Expander Header="キャラクター" IsEnabled="True" FontSize="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" HorizontalAlignment="Center">
                                        <StackPanel>
                                            <ItemsControl ItemsSource="{Binding LeftCharacterThumbs}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <local:CharacterThumb DataContext="{Binding Path=Instance}" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="1" HorizontalAlignment="Center">
                                        <StackPanel>
                                            <ItemsControl ItemsSource="{Binding RightCharacterThumbs}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <local:CharacterThumb DataContext="{Binding Path=Instance}" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Expander>
                            <Expander Header="背景" IsEnabled="True" FontSize="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" HorizontalAlignment="Center">
                                        <StackPanel>
                                            <ItemsControl ItemsSource="{Binding LeftBackgroundThumbs}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <local:BackgroundThumb DataContext="{Binding Path=Instance}" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="1" HorizontalAlignment="Center">
                                        <StackPanel>
                                            <ItemsControl ItemsSource="{Binding RightBackgroundThumbs}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <local:BackgroundThumb DataContext="{Binding Path=Instance}" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Expander>
                            <Expander Header="エフェクト" IsEnabled="True" FontSize="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" HorizontalAlignment="Center">
                                        <StackPanel>
                                            <TextBlock Text="項目１"/>
                                            <TextBlock Text="項目２"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="1" HorizontalAlignment="Center">
                                        <StackPanel>
                                            <TextBlock Text="項目１"/>
                                            <TextBlock Text="項目２"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Expander>
                            <Expander Header="BGM" IsEnabled="True" FontSize="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" HorizontalAlignment="Center">
                                        <StackPanel>
                                            <TextBlock Text="項目１"/>
                                            <TextBlock Text="項目２"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="1" HorizontalAlignment="Center">
                                        <StackPanel>
                                            <TextBlock Text="項目１"/>
                                            <TextBlock Text="項目２"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Expander>
                            <Expander Header="SE" IsEnabled="True" FontSize="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" HorizontalAlignment="Center">
                                        <StackPanel>
                                            <TextBlock Text="項目１"/>
                                            <TextBlock Text="項目２"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="1" HorizontalAlignment="Center">
                                        <StackPanel>
                                            <TextBlock Text="項目１"/>
                                            <TextBlock Text="項目２"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
